extends ./application.pug
block content
  h3 Add a post!
  div(class="row")
  form(class="col s12" action="/add-post" method="post")
    div(class="row")
      div(class="col s6")
        input(placeholder="Title" name="title" id="tile" type="text" class="validate")
        label(for="email") Title
        input(placeholder="Message" name="body" id="body" type="text" class="validate")
        label(for="username")  Message
    button(class="btn waves-effect waves-light" type="submit" name="action") Submit
      i(class="material-icons right")
